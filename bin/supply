#!/bin/bash
set -euo pipefail

BUILD_DIR=$1
CACHE_DIR=$2
DEPS_DIR=$3
DEPS_IDX=$4

START_DIR=$PWD

export BUILDPACK_DIR=`dirname $(readlink -f ${BASH_SOURCE%/*})`
source "$BUILDPACK_DIR/scripts/install_go.sh"
output_dir=$(mktemp -d -t supplyXXX)

cd $BUILDPACK_DIR
echo "-----> Running go build supply"
cat ./go.mod
GOROOT=$GoInstallDir/go $GoInstallDir/go/bin/go mod tidy
GOROOT=$GoInstallDir/go $GoInstallDir/go/bin/go build -v -x -mod=vendor -o $output_dir/supply ./src/wpcli/supply/cli

cd $START_DIR
$output_dir/supply "$BUILD_DIR" "$CACHE_DIR" "$DEPS_DIR" "$DEPS_IDX"
